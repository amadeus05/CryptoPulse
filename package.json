{
  "name": "crypto-bot",
  "version": "1.0.0",
  "description": "Multi-user Crypto Watch Bot (Binance + Telegram + better-sqlite3)",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc","check": "tsc --noEmit",
    "watch": "tsc --noEmit --watch",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "migrate": "tsx src/db/migrations/init.ts",
    "lint": "eslint . --ext .ts",
    "test": "vitest"
  },
  "dependencies": {
    "better-sqlite3": "^8.0.1",
    "dotenv": "^16.0.0",
    "p-queue": "^7.3.0",
    "pino": "^8.0.0",
    "telegraf": "^4.12.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.0.4",
    "vitest": "^0.34.0"
  }
}
